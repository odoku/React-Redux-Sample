root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{php,py}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{html, json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
